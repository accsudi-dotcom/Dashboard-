# Application Environment
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3000

# Authentication & Security
AUTH_SECRET=your-super-secret-jwt-key-here-use-openssl-rand-base64-32
DEFAULT_ADMIN_EMAIL=admin@sharoobi.local
DEFAULT_ADMIN_PASSWORD=SecurePassword123!
NEXT_PUBLIC_DEFAULT_ADMIN_EMAIL=admin@sharoobi.local
NEXT_PUBLIC_DEFAULT_ADMIN_PASSWORD=SecurePassword123!

